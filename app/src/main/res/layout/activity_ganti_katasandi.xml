<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu.Profilmenu.Ganti_katasandi">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue">


        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/buttonback"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="start"
            android:contentDescription="Kembali" />


        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:padding="@dimen/_10sdp"
            android:textStyle="bold"
            android:text="Ganti Kata Sandi"
            android:layout_marginRight="@dimen/_50sdp"
            />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@color/abuputih">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_5sdp"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/abuputih">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_10sdp">

                    <TextView
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Masukkan Kata Sandi Lama"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textinputlayoutkatasandilama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:boxBackgroundColor="@color/white"

                        app:counterEnabled="true"
                        app:counterMaxLength="20"

                        app:endIconMode="password_toggle"

                        app:helperTextEnabled="true"
                        app:helperText="Kata Sandi Lama"
                        app:helperTextTextColor="@android:color/holo_blue_dark"
                        >

                        <EditText
                            android:id="@+id/text_katasandilama"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_centerVertical="true"
                            android:hint="Kata Sandi"
                            android:textSize="@dimen/_12sdp"
                            android:inputType="textPassword"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"

                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Masukkan Kata Sandi Baru"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textinputlayoutkatasandibaru"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:boxBackgroundColor="@color/white"

                        app:counterEnabled="true"
                        app:counterMaxLength="20"

                        app:endIconMode="password_toggle"

                        app:helperTextEnabled="true"
                        app:helperText="Kata Sandi Baru"
                        app:helperTextTextColor="@android:color/holo_blue_dark"
                        >

                        <EditText
                            android:id="@+id/text_katasandibaru"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_centerVertical="true"
                            android:hint="Kata Sandi"
                            android:textSize="@dimen/_12sdp"
                            android:inputType="textPassword"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"

                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Konfirmasi Kata Sandi Baru"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textinputlayoutkatakonfirmasisandibaru"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:boxBackgroundColor="@color/white"

                        app:counterEnabled="true"
                        app:counterMaxLength="20"

                        app:endIconMode="password_toggle"

                        app:helperTextEnabled="true"
                        app:helperText="Konfirmasi Kata Sandi Baru"
                        app:helperTextTextColor="@android:color/holo_blue_dark"
                        >

                        <EditText
                            android:id="@+id/text_konfirmasikatasandibaru"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_centerVertical="true"
                            android:hint="Kata Sandi"
                            android:textSize="@dimen/_12sdp"
                            android:inputType="textPassword"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"

                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/Btnsimpan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:backgroundTint="@color/blue"
                        android:text="Simpan"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        />




                </LinearLayout>



            </ScrollView>

