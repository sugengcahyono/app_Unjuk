<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Produk_saya">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue">


        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/buttonback"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="start"
            android:contentDescription="Kembali" />


        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:padding="@dimen/_10sdp"
            android:textStyle="bold"
            android:text="Produk Saya"
            android:layout_marginRight="@dimen/_50sdp"
            />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@color/abuputih">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_5sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <!-- Kolom Pencarian -->
                <EditText
                    android:id="@+id/searchEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Cari Produk Saya ..."
                    android:textSize="@dimen/_12sdp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:imeOptions="actionSearch"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/oval_background1" />

                <!-- Tombol Cari -->
                <ImageButton
                    android:id="@+id/cariButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/oval_background1"
                    android:src="@drawable/baseline_search_24" />


            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/abuputih">

                <!--        produk-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_8sdp"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:background="@color/abuputih"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:background="@color/white"


                            >


                            />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">



                                <ImageView
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_90sdp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/fotokeripik" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    >

                                    <TextView
                                        android:layout_width="@dimen/_150sdp"
                                        android:layout_height="@dimen/_65sdp"
                                        android:paddingLeft="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:gravity="center_vertical"
                                        android:text="Keripik Madu"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_15sdp"
                                        android:textStyle="bold"

                                        />



                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:paddingLeft="@dimen/_5sdp"
                                        android:text="Rp. 25.000"
                                        android:textColor="@color/blue"
                                        android:textSize="@dimen/_12sdp"
                                        android:textStyle="bold"

                                        />


                                </LinearLayout>

                                <ImageButton
                                    android:layout_width="18dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_1sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:background="@color/white"
                                    android:src="@drawable/titiktiga"


                                    />

                            </LinearLayout>



                        </androidx.cardview.widget.CardView>


                    </LinearLayout>





                </LinearLayout>



