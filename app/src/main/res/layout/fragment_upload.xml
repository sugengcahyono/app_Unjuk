<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Upload">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardElevation="@dimen/_1sdp"
           app:cardMaxElevation="5dp"
           >

           <TextView
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_50sdp"
               android:textSize="@dimen/_20sdp"
               android:textColor="@color/white"
               android:background="@color/blue"
               android:padding="@dimen/_10sdp"
               android:textStyle="bold"
               android:text="Upload"
               />

       </androidx.cardview.widget.CardView>

       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/abuputih"
           >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:padding="@dimen/_8sdp">


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="@color/white"
               >

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginTop="@dimen/_5sdp"
                   android:paddingHorizontal="@dimen/_11sdp"
                   android:text="Nama UMKM"
                   android:textSize="@dimen/_14sdp"
                   android:gravity="left"
                   android:textStyle="bold"
                   />

               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   app:boxBackgroundColor="@color/white"
                   android:paddingHorizontal="@dimen/_10sdp"
                   android:layout_marginTop="@dimen/_5sdp"
                   app:hintEnabled="false"
                   >

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/input_namaumkm"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:textSize="@dimen/_12sdp"

                       android:textColor="@color/black"
                       android:textColorHint="@color/black"
                       />
               </com.google.android.material.textfield.TextInputLayout>


               <!--            jenis usaha-->
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginTop="@dimen/_5sdp"
                   android:paddingHorizontal="@dimen/_11sdp"
                   android:text="Jenis Usaha"
                   android:textSize="@dimen/_14sdp"
                   android:gravity="left"
                   android:textStyle="bold"
                   />

               <com.google.android.material.button.MaterialButton
                   android:id="@+id/btn_jenisusaha"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_50sdp"
                   android:layout_marginHorizontal="@dimen/_10sdp"
                   android:textSize="@dimen/_12sdp"
                   app:cornerRadius="@dimen/_5sdp"
                   android:textColor="@color/black"
                   android:textColorHint="@color/black"
                   android:backgroundTint="@color/abuputih"
                   android:text="Pilih Jenis Usaha"
                   android:textStyle="normal"
                   android:drawableRight="@drawable/dropdown"
                   android:gravity="center_vertical|start"
                   android:paddingHorizontal="@dimen/_10sdp"
                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginTop="@dimen/_5sdp"
                   android:paddingHorizontal="@dimen/_11sdp"
                   android:text="NIB"
                   android:textSize="@dimen/_14sdp"
                   android:gravity="left"
                   android:textStyle="bold"
                   />

               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   app:boxBackgroundColor="@color/white"
                   android:paddingHorizontal="@dimen/_10sdp"
                   android:layout_marginTop="@dimen/_5sdp"
                   app:hintEnabled="false"
                   >

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/input_nibumkm"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:textSize="@dimen/_12sdp"

                       android:textColor="@color/black"
                       android:textColorHint="@color/black"
                       />

               </com.google.android.material.textfield.TextInputLayout>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginTop="@dimen/_5sdp"
                   android:paddingHorizontal="@dimen/_11sdp"
                   android:text="No. Telephone"
                   android:textSize="@dimen/_14sdp"
                   android:gravity="left"
                   android:textStyle="bold"
                   />

               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   app:boxBackgroundColor="@color/white"
                   android:paddingHorizontal="@dimen/_10sdp"
                   android:layout_marginTop="@dimen/_5sdp"
                   app:hintEnabled="false"
                   >

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/input_nohpumkm"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:textSize="@dimen/_12sdp"
                       android:inputType="phone"
                       android:textColor="@color/black"
                       android:textColorHint="@color/black"
                       />

               </com.google.android.material.textfield.TextInputLayout>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginTop="@dimen/_5sdp"
                   android:paddingHorizontal="@dimen/_11sdp"
                   android:text="Kecamatan"
                   android:textSize="@dimen/_14sdp"
                   android:gravity="left"
                   android:textStyle="bold"
                   />



               <com.google.android.material.button.MaterialButton
                   android:id="@+id/btnKecamatan"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_50sdp"
                   android:layout_marginHorizontal="@dimen/_10sdp"
                   android:textSize="@dimen/_12sdp"
                   app:cornerRadius="@dimen/_5sdp"
                   android:textColor="@color/black"
                   android:textColorHint="@color/black"
                   android:backgroundTint="@color/abuputih"
                   android:text="Pilih Kecamatan"
                   android:textStyle="normal"
                   android:drawableRight="@drawable/dropdown"
                   android:gravity="center_vertical|start"
                   android:paddingHorizontal="@dimen/_10sdp"
                   />



               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginTop="@dimen/_5sdp"
                   android:paddingHorizontal="@dimen/_11sdp"
                   android:text="Alamat"
                   android:textSize="@dimen/_14sdp"
                   android:gravity="left"
                   android:textStyle="bold"
                   />

               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   app:boxBackgroundColor="@color/white"
                   android:paddingHorizontal="@dimen/_10sdp"
                   android:layout_marginTop="@dimen/_5sdp"
                   app:hintEnabled="false"
                   >

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/input_alamatumkm"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:textSize="@dimen/_12sdp"

                       android:textColor="@color/black"
                       android:textColorHint="@color/black"
                       />

               </com.google.android.material.textfield.TextInputLayout>

               <Button
                   android:id="@+id/Btn_Simpandataumkm"
                   android:layout_width="@dimen/_100sdp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_20sdp"
                   android:layout_marginRight="@dimen/_10sdp"
                   android:backgroundTint="@color/blue"
                   android:text="Simpan"
                   android:textSize="@dimen/_15sdp"
                   android:textStyle="bold"
                   android:textColor="@color/white"
                   android:layout_gravity="right"
                   />


           </LinearLayout>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginTop="@dimen/_20sdp"
               android:paddingHorizontal="@dimen/_11sdp"
               android:text="Tambahkan Foto"
               android:textSize="@dimen/_14sdp"
               android:gravity="left"
               android:textStyle="bold"
               />

<!--           upload foto-->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_5sdp"
               android:orientation="horizontal"
               android:background="@color/abuputih"
               android:gravity="center_vertical">

               <ImageView
                   android:id="@+id/uploadfoto1"
                   android:layout_width="0dp"
                   android:layout_height="@dimen/_100sdp"
                   android:layout_weight="1"
                   android:src="@drawable/add_photo"
                   android:scaleType="centerInside"
                   android:adjustViewBounds="true"
                   android:padding="@dimen/_5sdp"
                   android:background="@color/white"
                   />

               <ImageView
                   android:id="@+id/uploadfoto2"
                   android:layout_width="0dp"
                   android:layout_height="@dimen/_100sdp"
                   android:layout_weight="1"
                   android:layout_marginStart="@dimen/_5sdp"
                   android:layout_marginEnd="@dimen/_5sdp"
                   android:src="@drawable/add_photo"
                   android:scaleType="centerInside"
                   android:adjustViewBounds="true"
                   android:padding="@dimen/_5sdp"
                   android:background="@color/white"
                   />

               <ImageView
                   android:id="@+id/uploadfoto3"
                   android:layout_width="0dp"
                   android:layout_height="@dimen/_100sdp"
                   android:layout_weight="1"
                   android:src="@drawable/add_photo"
                   android:scaleType="centerInside"
                   android:adjustViewBounds="true"
                   android:padding="@dimen/_5sdp"
                   android:background="@color/white"
                   />
           </LinearLayout>


           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginTop="@dimen/_5sdp"
               android:paddingHorizontal="@dimen/_11sdp"
               android:text="Nama Produk"
               android:textSize="@dimen/_14sdp"
               android:gravity="left"
               android:textStyle="bold"
               />

           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               app:boxBackgroundColor="@color/white"
               android:paddingHorizontal="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_5sdp"
               app:hintEnabled="false"
               >

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/input_namaproduk"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:textSize="@dimen/_12sdp"

                   android:textColor="@color/black"
                   android:textColorHint="@color/black"
                   />
           </com.google.android.material.textfield.TextInputLayout>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginTop="@dimen/_5sdp"
               android:paddingHorizontal="@dimen/_11sdp"
               android:text="Harga"
               android:textSize="@dimen/_14sdp"
               android:gravity="left"
               android:textStyle="bold"
               />

           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               app:boxBackgroundColor="@color/white"
               android:paddingHorizontal="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_5sdp"
               app:hintEnabled="false"
               >

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/input_hargaproduk"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:textSize="@dimen/_12sdp"
                   android:inputType="number"
                   android:textColor="@color/black"
                   android:textColorHint="@color/black"
                   />

           </com.google.android.material.textfield.TextInputLayout>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginTop="@dimen/_5sdp"
               android:paddingHorizontal="@dimen/_11sdp"
               android:text="Kategori"
               android:textSize="@dimen/_14sdp"
               android:gravity="left"
               android:textStyle="bold"
               />

           <com.google.android.material.button.MaterialButton
               android:id="@+id/btnkategori"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_50sdp"
               android:layout_marginHorizontal="@dimen/_10sdp"
               android:textSize="@dimen/_12sdp"
               app:cornerRadius="@dimen/_5sdp"
               android:textColor="@color/black"
               android:textColorHint="@color/black"
               android:backgroundTint="@color/white"
               android:hint="Pilih Kategori"
               android:textStyle="normal"
               android:drawableRight="@drawable/dropdown"
               android:gravity="center_vertical|start"
               android:paddingHorizontal="@dimen/_10sdp"
               />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginTop="@dimen/_5sdp"
               android:paddingHorizontal="@dimen/_11sdp"
               android:text="Deskripsi Produk"
               android:textSize="@dimen/_14sdp"
               android:gravity="left"
               android:textStyle="bold"
               />

           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               app:boxBackgroundColor="@color/white"
               android:paddingHorizontal="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_5sdp"
               app:hintEnabled="false"
               >

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/input_deskripsiproduk"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:textSize="@dimen/_12sdp"

                   android:textColor="@color/black"
                   android:textColorHint="@color/black"
                   />

           </com.google.android.material.textfield.TextInputLayout>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginTop="@dimen/_5sdp"
               android:paddingHorizontal="@dimen/_11sdp"
               android:text="PIRT"
               android:textSize="@dimen/_14sdp"
               android:gravity="left"
               android:textStyle="bold"
               />

           <com.google.android.material.textfield.TextInputLayout

               android:layout_width="match_parent"
               android:layout_height="match_parent"
               app:boxBackgroundColor="@color/white"
               android:paddingHorizontal="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_5sdp"
               app:hintEnabled="false"
               >

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/input_pirtproduk"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:textSize="@dimen/_12sdp"

                   android:textColor="@color/black"
                   android:textColorHint="@color/black"
                   />

           </com.google.android.material.textfield.TextInputLayout>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginTop="@dimen/_5sdp"
               android:paddingHorizontal="@dimen/_11sdp"
               android:text="BPOM"
               android:textSize="@dimen/_14sdp"
               android:gravity="left"
               android:textStyle="bold"
               />

           <com.google.android.material.textfield.TextInputLayout

               android:layout_width="match_parent"
               android:layout_height="match_parent"
               app:boxBackgroundColor="@color/white"
               android:paddingHorizontal="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_5sdp"
               app:hintEnabled="false"
               >

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/input_bpomproduk"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:textSize="@dimen/_12sdp"

                   android:textColor="@color/black"
                   android:textColorHint="@color/black"
                   />

           </com.google.android.material.textfield.TextInputLayout>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginTop="@dimen/_5sdp"
               android:paddingHorizontal="@dimen/_11sdp"
               android:text="ID Halal"
               android:textSize="@dimen/_14sdp"
               android:gravity="left"
               android:textStyle="bold"
               />

           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               app:boxBackgroundColor="@color/white"
               android:paddingHorizontal="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_5sdp"
               app:hintEnabled="false"
               >

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/input_idhalalproduk"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:textSize="@dimen/_12sdp"

                   android:textColor="@color/black"
                   android:textColorHint="@color/black"
                   />

           </com.google.android.material.textfield.TextInputLayout>


           <Button
               android:id="@+id/Btnupload"
               android:layout_width="@dimen/_100sdp"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_50sdp"
               android:backgroundTint="@color/blue"
               android:text="Upload"
               android:textSize="@dimen/_15sdp"
               android:textStyle="bold"
               android:textColor="@color/white"
               android:layout_gravity="center"
               />

       </LinearLayout>
       </ScrollView>
   </LinearLayout>

</FrameLayout>