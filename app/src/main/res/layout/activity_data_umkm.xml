<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu.Profilmenu.DataUmkm">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue">


        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/buttonback"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="start"
            android:contentDescription="Kembali" />


        <TextView

            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:padding="@dimen/_10sdp"
            android:textStyle="bold"
            android:text="Data UMKM"
            android:layout_marginRight="@dimen/_50sdp"
            />
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@color/abuputih">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/_50sdp"
                android:backgroundTint="@color/abuputih"
                >

                <ImageView
                    android:id="@+id/foto_umkm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_storefront_24"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/btn_ubahfotoumkm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Ubah Foto"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                />
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_35sdp"
                android:paddingHorizontal="@dimen/_11sdp"
                android:text="Nama UMKM"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:gravity="left"
                android:textStyle="bold"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxBackgroundColor="@color/white"
                android:paddingHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:hintEnabled="false"
                app:counterEnabled="true"
                app:counterMaxLength="50"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_namaumkm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_12sdp"
                    android:maxLength="50"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    />
            </com.google.android.material.textfield.TextInputLayout>


<!--            jenis usaha-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_11sdp"
                android:text="Jenis Usaha"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:gravity="left"
                android:textStyle="bold"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_jenisusaha"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                app:cornerRadius="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:backgroundTint="@color/white"
                android:text="Pilih Jenis Usaha"
                android:textStyle="normal"
                android:drawableRight="@drawable/dropdown"
                android:gravity="center_vertical|start"
                android:paddingHorizontal="@dimen/_10sdp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_11sdp"
                android:text="NIB"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:gravity="left"
                android:textStyle="bold"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxBackgroundColor="@color/white"
                android:paddingHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:hintEnabled="false"
                app:counterEnabled="true"
                app:counterMaxLength="13"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_nibumkm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_12sdp"
                    android:maxLength="13"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_11sdp"
                android:text="No. Handphone"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:gravity="left"
                android:textStyle="bold"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxBackgroundColor="@color/white"
                android:paddingHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:hintEnabled="false"
                app:counterEnabled="true"
                app:counterMaxLength="13"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_nohpumkm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_12sdp"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_11sdp"
                android:text="Kecamatan"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:gravity="left"
                android:textStyle="bold"
                />



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnKecamatan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                app:cornerRadius="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:backgroundTint="@color/white"
                android:text="Pilih Kecamatan"
                android:textStyle="normal"
                android:drawableRight="@drawable/dropdown"
                android:gravity="center_vertical|start"
                android:paddingHorizontal="@dimen/_10sdp"
            />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_11sdp"
                android:text="Alamat"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:gravity="left"
                android:textStyle="bold"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxBackgroundColor="@color/white"
                android:paddingHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:hintEnabled="false"
                app:counterEnabled="true"
                app:counterMaxLength="90"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_alamatumkm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_12sdp"
                    android:maxLength="90"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    />

            </com.google.android.material.textfield.TextInputLayout>




            <Button
                android:id="@+id/Btn_Simpandataumkm"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:backgroundTint="@color/blue"
                android:text="Simpan"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                />


        </LinearLayout>



    </ScrollView>

</FrameLayout>