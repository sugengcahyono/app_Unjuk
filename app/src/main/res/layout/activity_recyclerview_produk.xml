<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    tools:context=".Menu.Profilmenu.Recyclerview_produk">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:background="@color/abuputih"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:background="@color/white"


                >




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">



                    <ImageView
                        android:id="@+id/image_Produk"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fotokeripik" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/nama_produk"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_65sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:gravity="center_vertical"
                            android:text="Keripik Madu"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold"

                            />



                        <TextView
                            android:id="@+id/Harga_produk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:text="Rp. 25.000"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"

                            />


                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btn_hapus"
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@color/white"
                        android:src="@drawable/hapus_silang"
                        />

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:visibility="gone"-->
<!--                        android:id="@+id/id_produk"/>-->

                </LinearLayout>



            </androidx.cardview.widget.CardView>


        </LinearLayout>





    </LinearLayout>
